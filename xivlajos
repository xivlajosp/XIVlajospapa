<script>
// Rotáló idézet
const quotes = [
  '"Keressétek először Isten országát és az ő igazságát, és minden más megadatik nektek." — (Mt 6:33)',
  '"Az Úr a pásztorom, nem szűkölködöm." — (Zsolt 23:1)',
  '"Mindenre van erőm a Krisztusban, aki megerősít engem." — (Fil 4:13)',
  '"Szeressétek egymást, ahogy én szerettelek titeket." — (Jn 15:12)'
];
let quoteIndex = 0;
const rotaloQuoteEl = document.getElementById('rotaloQuote');
function rotateQuote(){ 
  rotaloQuoteEl.textContent = quotes[quoteIndex]; 
  quoteIndex = (quoteIndex + 1) % quotes.length; 
}
setInterval(rotateQuote,8000);

// Dátum blokk
const datumEl = document.getElementById('datum');
function getHungarianWeekday(date){
  const weekdays = ["Vasárnap","Hétfő","Kedd","Szerda","Csütörtök","Péntek","Szombat"];
  return weekdays[date.getDay()];
}
function updateDatum(){
  const now = new Date();
  const ev = now.getFullYear();
  const honapok = ["Január","Február","Március","Április","Május","Június","Július","Augusztus","Szeptember","Október","November","December"];
  const honap = honapok[now.getMonth()];
  const nap = now.getDate();
  const weekday = getHungarianWeekday(now);
  datumEl.innerHTML = `A mai dátum: ${ev}. ${honap} ${nap}. ${weekday}`;
}
updateDatum();

