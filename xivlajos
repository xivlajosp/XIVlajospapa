// Keresés a Biblia Gateway-ben
document.getElementById('lucky').addEventListener('click', function(){
  const q = document.getElementById('q').value.trim();
  if(q){
    window.open('https://www.biblegateway.com/quicksearch/?quicksearch=' + encodeURIComponent(q), '_blank');
  } else {
    window.open('https://www.vatican.va','_blank');
  }
});
document.getElementById('biblia').addEventListener('click',function(){
  window.open('https://www.biblegateway.com/passage/?search=John+3%3A16&version=KJV','_blank');
});
document.getElementById('vatikan').addEventListener('click', function(){
    window.open('https://www.youtube.com/@VaticanNews/live', '_blank');
});

// Visszaszámláló ünnepekig
const countdownEl = document.getElementById('countdown');
const upcomingHolidays = [
  {name:"Advent", date:"2025-12-01"},
  {name:"Karácsony", date:"2025-12-25"},
  {name:"Húsvét", date:"2026-04-20"}
];
function updateCountdown(){
  const now = new Date();
  let nextHoliday = upcomingHolidays.find(h => new Date(h.date) > now);
  if(!nextHoliday) nextHoliday = upcomingHolidays[0];
  const holidayDate = new Date(nextHoliday.date);
  const diff = holidayDate - now;
  const days = Math.floor(diff / (1000*60*60*24));
  const hours = Math.floor((diff / (1000*60*60)) % 24);
  const minutes = Math.floor((diff / (1000*60)) % 60);
  const seconds = Math.floor((diff / 1000) % 60);
  countdownEl.innerHTML = `Következő ünnep: ${nextHoliday.name} — visszaszámlálás: ${days} nap ${hours} óra ${minutes} perc ${seconds} mp`;
}
setInterval(updateCountdown,1000);
updateCountdown();
